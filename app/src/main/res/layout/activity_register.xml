<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mikez.festpaycustomer.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorBlue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:src="@drawable/button_back_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/register_email"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:inputType="text"
            android:imeActionLabel="Next"
            android:maxLines="1"
            android:hint="@string/register_email"
            android:textColor="@color/colorBlue"
            android:textColorHint="@color/colorBlue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:text="@string/register_name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/register_name"
            android:inputType="text"
            android:imeActionLabel="Next"
            android:maxLines="1"
            android:textColor="@color/colorBlue"
            android:textColorHint="@color/colorBlue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:text="@string/firstpage_password"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_edit_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:hint="@string/firstpage_password"
            android:imeActionLabel="Next"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="@color/colorBlue"
            android:textColorHint="@color/colorBlue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:text="@string/register_confirmpass"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_edit_confirmpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:hint="@string/firstpage_password"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="@color/colorBlue"
            android:textColorHint="@color/colorBlue" />

        <Button
            android:id="@+id/register_button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorBlue"
            android:text="@string/firstpage_register_button"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
